{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://www.popoloproject.com/schemas/link.json#",
  "title": "Link",
  "description": "A URL",
  "type": "object",
  "properties": {
    "url": {
      "description": "A URL",
      "type": "string",
      "format": "uri"
    },
    "note": {
      "description": "A note, e.g. 'Wikipedia page'",
      "type": "string"
    },
    "field": {
      "description": "Field of this data that the url link to",
      "type": "string"
    }
  },
  "required": []
}
